@model Product
@{
    ViewBag.Title = $"Delete product ({Model.Description})";
}

@Html.Partial("_MessageRenderer")

<h2>Do you want to delete this product?</h2>

@using (var form = Html.BeginForm("SubmitDeleteProduct", "Product", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.CreationDate)
    @Html.HiddenFor(model => model.Identifier)
    @Html.HiddenFor(model => model.Description)
    @Html.HiddenFor(model => model.Price)
    @Html.HiddenFor(model => model.ProductStatus)
    @Html.HiddenFor(model => model.ProductTypeId)

    <div class="row">
        <input type="submit" class="btn btn-danger mr-1" value="Delete product" />
        <button type="button" id="backButton" class="btn btn-primary ml-1" data-url="@Url.Action("Index", "Product")">
            Go back
        </button>
    </div>
}

@section scripts{
    <script src="~/Scripts/app/go-back.js"></script>
}