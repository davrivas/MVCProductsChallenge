@model IList<Product>

<table id="productsTable" class="table table-striped table-responsive-md">
    <thead>
        <tr>
            <th>Identifier</th>
            <th>Description</th>
            <th>Product type</th>
            <th>Product status</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var product in Model)
            {
                @Html.Partial("_ProductRow", product)
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">
                    <em>There are no products to show</em>
                </td>
            </tr>
        }
    </tbody>
</table>