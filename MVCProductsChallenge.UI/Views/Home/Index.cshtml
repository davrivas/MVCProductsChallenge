@model MVCProductsChallenge.UI.ViewModels.HomeViewModels.IndexViewModel

<div class="row mb-3">
    <div class="col-md-6">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createProductModal">
            <span class="fa fa-plus"></span>
        </button>
    </div>
    <div class="col-md-6">
        <div class="row">
            @Html.Label("Identifier")
            @Html.TextBox("identifier", null, new { @class = "form-control" })
            @Html.Label("Description")
            @Html.TextBox("description", null, new { @class = "form-control" })
            <button type="button" id="search" >
                <span class="fa fa-glass"></span>
            </button>
        </div>
    </div>
</div>

@if (Model.Products.Count > 0)
{
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Identifier</th>
                <th>Description</th>
                <th>Product type</th>
                <th>Product status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                @Html.Partial("ProductRow", product)
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">There are no products yet</p>
}

@Html.Partial("CreateProduct", Model)