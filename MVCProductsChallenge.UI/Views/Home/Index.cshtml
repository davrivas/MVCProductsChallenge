@model MVCProductsChallenge.UI.ViewModels.HomeViewModels.IndexViewModel

<div class="row mb-3">
    <div class="col-md-6">
        <button type="button" class="btn btn-primary" onclick="window.location = '@Url.Action("CreateProduct", "Home")'">
            Add product <span class="fa fa-plus"></span>
        </button>
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="form-group">
                @Html.TextBox("identifier", null, new { @class = "form-control", placeholder = "Identifier" })
            </div>
            <div class="form-group">
                @Html.TextBox("description", null, new { @class = "form-control", placeholder = "Description" })
            </div>
            <button type="button" class="btn btn-primary" id="searchProduct">
                Search <span class="fa fa-search"></span>
            </button>
        </div>
    </div>
</div>

@if (Model.Products.Count > 0)
{
    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Identifier</th>
                <th>Description</th>
                <th>Product type</th>
                <th>Product status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                @Html.Partial("ProductRow", product)
            }
        </tbody>
    </table>
}
else
{
    <p class="text-center">There are no products yet</p>
}