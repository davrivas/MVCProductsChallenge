@model IList<ProductType>

<table id="productsTable" class="table table-striped table-responsive-md">
    <thead>
        <tr>
            <th>Name</th>
            <th>Edit</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count > 0)
        {
            foreach (var product in Model)
            {
                @Html.Partial("ProductTypeRow", product)
            }
        }
        else
        {
            <tr>
                <td colspan="2" class="text-center">
                    <em>There are no product types to show</em>
                </td>
            </tr>
        }
    </tbody>
</table>